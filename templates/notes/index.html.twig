{% extends 'base.html.twig' %}

{% block title %}Article Homepage{% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-stripped">
            <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><a href="/article/{{ article.id }}" class="btn btn-dark">Show</a></td>
                    <td><a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a></td>
                    <td><a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
    {% endif %}
    <script src="./assets/js/main.js"> </script>
{% endblock %}
