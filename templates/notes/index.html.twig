{% extends 'base.html.twig' %}

{% block title %}Note Homepage{% endblock %}

{% block body %}
    {% if notes %}
        <div id="notes">
            {% for note in notes %}
                <div class="note">
                    <h3>{{ note.title }}</h3>
                    <p>{{ note.body | raw }}</p>
                    <p>
                        {% for tag in note.tags %}
                            <span class="badge rounded-pill bg-primary">{{ tag.name }}</span>
                        {% endfor %}
                    </p>

                    <a href="/note/{{ note.id }}" class="btn btn-dark m-2">Show</a>
                    <a href="/note/edit/{{ note.id }}" class="btn btn-success m-2">Edit</a>
                    <a href="#" class="btn btn-danger delete-note m-2" data-id="{{ note.id }}">Delete</a>
                    <hr class="m-3">
                </div>
            {% endfor %}
        </div>

    {% else %}
        <p>No notes foundðŸ‘Ž. Please create a note ðŸ™‚.</p>
    {% endif %}
    <script src="./assets/js/main.js"> </script>
{% endblock %}
